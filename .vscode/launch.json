{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch PHP Built-in Server (with Xdebug)",
            "type": "php",
            "request": "launch",
            "runtimeExecutable": "C:\\\\xampp\\\\php\\\\php.exe",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:8000",
                "-t",
                "${workspaceFolder}"
            ],
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Listening on http://localhost:8000"
            }
        }
    ]
}
